<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Spender.Views.AboutView"
             Title="{extensions:Translate AboutTitle}"
             
             xmlns:extensions="clr-namespace:Spender.Extensions">

    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout Style="{StaticResource contentStyle}">
            <Label Text="{extensions:Translate AboutText}" />
        </StackLayout>
    </ScrollView>

</ContentPage>